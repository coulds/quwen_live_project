<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/view_left"
    android:layout_marginRight="@dimen/view_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
        android:id="@+id/iv_item_avatar"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:src="@color/colorAccent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_avatar"
        android:layout_alignBottom="@id/iv_item_avatar"
        android:layout_toEndOf="@id/iv_item_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="Kenneth"
            android:textColor="@color/myColor33383F"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/color999"
            android:textSize="12sp"
            android:text="今日充值：50000"/>


    </LinearLayout>
    <TextView
        android:layout_alignTop="@+id/iv_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-10-15 11:56"
        android:textColor="@color/myColorff333333"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/line"
        android:layout_below="@+id/iv_item_avatar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
</RelativeLayout>