                android:background="@drawable/myconcern_constellation_bg"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/home_sex_male"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
