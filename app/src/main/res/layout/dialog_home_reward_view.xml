<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="#88000000">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_bg_dialog"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home_dialog_reward" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_yes_dialog"
        style="@style/HomeDialogButtonStyle"
        android:layout_marginTop="14dp"
        android:text="@string/home_get_it_right_now" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cancel_dialog"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="24dp"
        android:padding="5dp"
        app:srcCompat="@drawable/home_dialog_cancle" />

</LinearLayout>