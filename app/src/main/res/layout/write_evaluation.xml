<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="评论主播"
        app:titleSize="18sp"
        app:titleColor="#1A1A1A"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        />

    <EditText
        android:id="@+id/edt_writeEvaluation"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:hint="请输入评价内容"
        android:textSize="14sp"
        android:gravity="start"
        android:layout_below="@id/tb_titleBar"
        android:background="@null"
        android:paddingLeft="16dp"
        />

    <Button
        android:id="@+id/btn_evaluation"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:text="我要评价"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_22_bule"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edt_writeEvaluation"
        />
    <Button
        android:id="@+id/btn_bottom"
        android:layout_gravity="center"
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:background="@drawable/bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"

        />
</RelativeLayout>