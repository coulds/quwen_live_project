<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_radius_12_white"
    android:layout_marginLeft="@dimen/view_left"
    android:layout_marginRight="@dimen/view_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/status"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:text="待审核"
        android:gravity="center"
        android:background="@drawable/my_release_button_bg"
        android:textColor="@color/white"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题：天蝎和金牛怎么看"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:textColor="#ff32303d"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-12-08 12:14:19"
        android:textColor="#ff666666"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"/>
    <com.lzy.ninegrid.NineGridView
        android:layout_below="@+id/time"
        android:id="@+id/nineGridView"
        android:layout_alignLeft="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_below="@+id/nineGridView"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="删除"
            android:layout_toLeftOf="@+id/tv_edit"

            android:layout_marginRight="@dimen/view_right"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:background="@drawable/shape_radius_6_gry"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="编辑"
            android:layout_below="@+id/nineGridView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_right"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:background="@drawable/shape_radius_6_bule"
            android:textSize="12sp"/>
    </LinearLayout>



</RelativeLayout>