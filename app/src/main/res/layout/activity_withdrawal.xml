<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightColor="@color/colorAccent"
        app:title="提现" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:id="@+id/rl_addBank"
        android:layout_width="match_parent"
        android:layout_height="73dp">

        <ImageView
            android:id="@+id/withdrawal_photo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/withdrawal_photo" />

        <TextView
            android:id="@+id/bank"
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/withdrawal_photo"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/withdrawal_photo"
            android:text="中国建设银行"
            android:textColor="#ff32303d"
            android:textSize="16sp" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="17dp"
            android:layout_below="@+id/bank"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/withdrawal_photo"
            android:text="尾号3073"
            android:textColor="#ff616266"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrows_right_ic"
            android:layout_centerVertical="true"
           android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="提现金额"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#ff616266"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/view_left"
        android:layout_marginRight="@dimen/view_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥"
            android:gravity="bottom"
            android:textColor="#ff32303d"
            android:textSize="28sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="numberDecimal"
            android:lines="1"
            android:textColor="#ff32303d"
            android:textSize="28sp" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginRight="@dimen/view_right"
        android:layout_marginLeft="@dimen/view_left"
        android:background="#E6E6E6" />



    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="99dp"
        android:layout_height="20dp"
        android:text="可用余额0.00元"
        android:layout_marginLeft="16dp"
        android:textColor="#ff616266"
        android:textSize="14sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="立即提现"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_22_bule"
        android:layout_margin="36dp"/>

</LinearLayout>