<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="关于去问" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/dialog_rounded_corner_bg10"
            android:src="@drawable/guanyuicon" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="21dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#69E8FE"
            android:textSize="18sp"
            android:gravity="right"
            android:text="去问直播人"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#3F3F3F"
            android:textSize="18sp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="2.4.20"/>

    </LinearLayout>


    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_version_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_leftText="版本更新"
        android:layout_marginTop="39dp"
        app:bar_rightIcon="@drawable/arrows_right_ic"
        app:bar_rightIconSize="18dp" />

    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_user_xieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        app:bar_leftText="用户服务协议"
        app:bar_rightIcon="@drawable/arrows_right_ic"
        app:bar_rightIconSize="18dp" />

    <com.hjq.widget.layout.SettingBar
        android:id="@+id/sb_yinsi_protect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_leftText="隐私保护协议"
        app:bar_rightIcon="@drawable/arrows_right_ic"
        app:bar_rightIconSize="18dp" />





</LinearLayout>