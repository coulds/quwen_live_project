<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fafafa"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/setting_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_setting_language"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                app:bar_leftText="头像">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_person_data_avatar"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="right|center_vertical|center_horizontal|center|end"
                    android:layout_marginHorizontal="20dp"
                    android:scaleType="centerCrop"
                    tools:src="@color/gray"
                    app:riv_oval="true" />
            </com.hjq.widget.layout.SettingBar>

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_setting_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="昵称"
                app:bar_rightIcon="@drawable/arrows_right_ic"
                app:bar_rightIconSize="18dp" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_setting_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="性别"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_setting_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="出生日期"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_phone_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:bar_leftText="手机号"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_email_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="邮箱"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_weixin_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="绑定微信"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_bankCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="银行卡"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_setting_password_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:bar_leftText="修改密码"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_problem_feed_back_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:bar_leftText="问题反馈" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_guanyu_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="关于去问"
                app:bar_rightIcon="@drawable/arrows_right_ic" />

            <TextView
                android:id="@+id/sb_tuichu_about"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textColor="#ff0000"
                android:text="退出当前账号" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>